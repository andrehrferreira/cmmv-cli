{
    "name": "@cmmv/cli",
    "version": "0.4.0",
    "description": "CLI tool for CMMV applications",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=16.14"
    },
    "bin": {
        "cmmv": "bin/cmmv.js"
    },
    "keywords": [
        "cmmv",
        "ci",
        "npx",
        "start"
    ],
    "scripts": {
        "start": "node bin/cmmv.js",
        "release": "node release.js",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cmmvio/cmmv-cli.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/cmmvio/cmmv-cli/issues"
    },
    "homepage": "https://github.com/cmmvio/cmmv-cli#readme",
    "dependencies": {
        "@cmmv/core": "^0.8.18",
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-angular": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@swc-node/core": "^1.13.3",
        "@swc-node/register": "^1.10.9",
        "@swc/cli": "^0.6.0",
        "@swc/core": "^1.10.16",
        "@swc/helpers": "^0.5.15",
        "chokidar": "^4.0.3",
        "commander": "^11.1.0",
        "dotenv": "^16.4.7",
        "esbuild": "^0.25.0",
        "esbuild-register": "^3.6.0",
        "execa": "^9.5.1",
        "fs-extra": "^11.2.0",
        "inquirer": "^9.3.7",
        "ora": "^6.3.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tslib": "^2.8.1",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/inquirer": "^9.0.7",
        "@types/node": "^20.17.6",
        "chalk": "^5.3.0",
        "conventional-changelog": "^6.0.0",
        "conventional-changelog-cli": "^5.0.0",
        "enquirer": "^2.4.1",
        "eslint": "^8.57.1",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "release-it": "^17.10.0",
        "semver": "^7.6.3",
        "typescript": "^5.6.3"
    },
    "lint-staged": {
        "**/*.{ts,json}": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
